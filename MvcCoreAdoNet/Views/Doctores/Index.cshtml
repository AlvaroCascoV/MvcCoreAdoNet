@model List<Doctor>
@{
    List<string> especialidades = (List<string>)ViewData["ESPECIALIDADES"];
}
@section images {
     
}
<h1>Doctores por especialidad</h1>
<div>
    <form method="post">
        @* <label>Introduzca especialidad:</label>
        <input type="text" name="especialidad" class="form-control" /> *@

        @* queremos un select con todas las especialidades, mejor que un input *@
        <select name="especialidad" class="form-control"> 
            @foreach(string espe in especialidades)
                {
                    <option>@espe</option>
                }
            </select>

        <button class="btn btn-secondary">Buscar doctores</button>
    </form>
</div>

<table class="table table-secondary border-2">
    <thead>
        <tr>
            <th>Id doctor</th>
            <th>Apellido</th>
            <th>Especialidad</th>
        </tr>
    </thead>
    <tbody>

        @foreach (Doctor doctor in Model)
        {
            <tr>
                <td>@doctor.IdDoctor</td>
                <td>@doctor.Apellido</td>
                <td>@doctor.Especialidad</td>
            </tr>
        }
    </tbody>
</table>
