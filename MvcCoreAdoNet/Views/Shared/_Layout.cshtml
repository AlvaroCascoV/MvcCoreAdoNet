
<!doctype html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <meta name="description" content="">
    <meta name="author" content="">

    <title>NetCore AdoNet</title>

    <link rel="canonical" href="https://getbootstrap.com/docs/4.0/examples/navbar-fixed/">

    <!-- Bootstrap core CSS -->
    <link href="~/css/bootstrap.min.css" rel="stylesheet">
    @RenderSection("styles",false)

    <!-- Custom styles for this template -->
    <link href="~/css/navbar-top-fixed.css" rel="stylesheet">
</head>

<body>

    <nav class="navbar navbar-expand-md navbar-dark fixed-top bg-dark">
        <a class="navbar-brand" href="#">Fixed navbar</a>
        <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarCollapse" aria-controls="navbarCollapse" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse" id="navbarCollapse">
            <ul class="navbar-nav mr-auto">
                <li class="nav-item">
                    <a asp-controller="Home" asp-action="Index" class="nav-link">Ir a Home</a>
                </li> ||
                <li class="nav-item">
                    <a asp-controller="Home" asp-action="VistaPrueba1" class="nav-link">Vista 1</a>
                </li>
            </ul>
        </div>
    </nav>

    <main role="main" class="container">
        <div class="mt-5 position-relative">
            <h1 class="mt-5" id="mensaje">Zona de vistas</h1>
            @if (IsSectionDefined("images"))
            {
                @RenderSection("images", false)
            }
            else
            {
                <img src="~/images/puig.jpg" style="height:150px;" />
                <button id="botonInicio" class="btn btn-primary">Boton Layout</button>
            }
            @RenderBody()
        </div>
    </main>


    <!-- Bootstrap core JavaScript
    ================================================== -->
    <!-- Placed at the end of the document so the pages load faster -->
    <script src="https://code.jquery.com/jquery-3.2.1.slim.min.js" integrity="sha384-KJ3o2DKtIkvYIK3UENzmM7KCkRr/rE9/Qpg6aAZGJwFDMVNA/GpGFF93hXpG5KkN" crossorigin="anonymous"></script>
    <script>window.jQuery || document.write('<script src="../../assets/js/vendor/jquery-slim.min.js"><\/script>')</script>
    <script src="~/js/jquery-4.0.0.min.js"></script>
    <script src="~/js/popper.min.js"></script>
    <script src="~/js/bootstrap.min.js"></script>
    @RenderSection("scripts", false)
    <script>
        $(document).ready(function(){
            $("#botonInicio").click(function(){
                $("#mensaje").text("Boton pulsado en Layout!!!")
            })
        })
    </script>
</body>
</html>
